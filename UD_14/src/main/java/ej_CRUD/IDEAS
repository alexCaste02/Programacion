public void actualizar(Ciudades ciudades) {
        try (Connection connection= dataSource.getConnection()){

            PreparedStatement stmt=connection.prepareStatement("update city set name=?, district=?, population=?, countrycode=? WHERE id=?");

            stmt.setString(1,ciudades.getNombre());
            stmt.setString(2,ciudades.getDistrito());
            stmt.setLong(3,ciudades.getPoblacion());
            stmt.setString(4,ciudades.getCountrycode());
            stmt.setLong(5,ciudades.getId());

            stmt.executeQuery();
        } catch (SQLException e) {
            throw new RuntimeException(e);
        }
    }